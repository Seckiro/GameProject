RWTexture2D<float4> _RenderTexture;

[numthreads(8,8,1)]
void CSMainDisplay (uint3 id : SV_DispatchThreadID)
{
    _RenderTexture[id.xy] = float4(id.x & id.y, (id.x & 15)/15.0, (id.y & 15)/15.0, 0.5);
}


